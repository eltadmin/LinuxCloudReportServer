# Environment variables for LinuxCloudReportServer

# Server configuration
HTTP_PORT=8080
TCP_PORT=8016
DB_HOST=db
DB_PORT=3306
DB_USER=dreports
DB_PASSWORD=dreports
DB_NAME=dreports
DEBUG_MODE=true
LOG_LEVEL=INFO

# Response format for Delphi compatibility
INIT_RESPONSE_FORMAT=14

# Report Server Configuration
RPT_SERVER_HOST=report_server
RPT_SERVER_PORT=8016
RPT_SERVER_USER=admin
RPT_SERVER_PASSWORD=admin

# Server Configuration
TCP_HOST=0.0.0.0
SERVER_DEBUG=true

# Authentication Server
AUTH_SERVER_URL=http://web:8015/dreport/api.php

# Disable the Python TCP server, use the Go server instead
DISABLE_TCP_SERVER=true

# Timezone Configuration - make sure to set the proper timezone
TZ=Europe/Sofia

# Ensure UTF-8 encoding
PYTHONIOENCODING=utf-8
LC_ALL=C.UTF-8
LANG=C.UTF-8

# Debug Settings for TCP Server
USE_FIXED_DEBUG_KEY=true
SERVER_KEY=D5F2 